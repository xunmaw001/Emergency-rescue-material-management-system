<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.WuzichukuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.WuzichukuEntity" id="wuzichukuMap">
        <result property="chukubianhao" column="chukubianhao"/>
        <result property="wuzimingcheng" column="wuzimingcheng"/>
        <result property="wuzifenlei" column="wuzifenlei"/>
        <result property="wuzitupian" column="wuzitupian"/>
        <result property="wuzishuliang" column="wuzishuliang"/>
        <result property="chukuriqi" column="chukuriqi"/>
        <result property="chukuleixing" column="chukuleixing"/>
        <result property="chukubeizhu" column="chukubeizhu"/>
        <result property="yonghuming" column="yonghuming"/>
        <result property="xingming" column="xingming"/>
        <result property="shouji" column="shouji"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.WuzichukuVO" >
		SELECT * FROM wuzichuku  wuzichuku         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.WuzichukuVO" >
		SELECT  wuzichuku.* FROM wuzichuku  wuzichuku 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.WuzichukuView" >

		SELECT  wuzichuku.* FROM wuzichuku  wuzichuku 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.WuzichukuView" >
		SELECT * FROM wuzichuku  wuzichuku <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM wuzichuku
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM wuzichuku
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM wuzichuku
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM wuzichuku
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM wuzichuku
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
</mapper>
